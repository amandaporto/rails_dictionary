<%= form_for(@definition) do |f| %>
  <% if @definition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@definition.errors.count, "error") %> prohibited this definition from being saved:</h2>

      <ul>
      <% @definition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :word %><br>
    <%= f.text_field :word %>
  </div>
  <div class="field">
    <%= f.label :meaning %><br>
    <%= f.text_field :meaning %>
  </div>
  <div class="field">
    <%= f.label :part_of_speech %><br>
    <%= f.select :part_of_speech, ["noun","verb","pronoun","adjective","adverb","preposition","conjunction","interjection"] %>
  </div>
  <div class="field">
    <%= f.label :example %><br>
    <%= f.text_field :example %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
