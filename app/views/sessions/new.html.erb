<div class="container center">

  <%= form_tag(sessions_path, method: :post, html: {:class => "form-signin"}) %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input name ="email" type="email" id="inputEmail" class="form-control signup" placeholder="Email address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input name ="password" type="password" id="inputPassword" class="form-control signup" placeholder="Password" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</div>
