<p id="notice"><%= notice %></p>


<% if @search %>
  <h3>Definitions Found</h3>
<% else %>
  <h3>Listing Definitions</h3>
<% end %>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Meaning</th>
      <th>Part of Speech</th>
      <th>Example</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @definitions.each do |definition| %>
      <tr>
        <td><%= definition.word %></td>
        <td><%= definition.meaning %></td>
        <td><%= definition.part_of_speech %></td>
        <td><%= definition.example %></td>
        <% if @search.nil? %>
          <td><%= link_to '', definition, class: "glyphicon glyphicon-info-sign" %></td>
          <td><%= link_to '', edit_definition_path(definition),class: "glyphicon glyphicon-pencil" %></td>
          <td><%= link_to '', definition, method: :delete, class: "glyphicon glyphicon-trash", data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
